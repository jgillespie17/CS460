@model IEnumerable<hw8.Models.RaceResult>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            @Html.TextBox("name", null, new { @class = "form-control", type = "text", required = "required", placeholder = "Search by student name", style = "width:100%"})
        </div>
    </div>
}


@if (ViewBag.Success == true)
{
    <div class="row">
        @if(Model.Count() == 0)
        {
            <p> No Results, try again </p>
        }
        else
        {
            <table class="table table-striped">
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Athlete.NAME, "Details", "Home", new { id = item.Athlete.ID }, new { @class = "btn", style="color:Black"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}
