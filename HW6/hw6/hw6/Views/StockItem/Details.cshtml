@model hw6.Models.ViewModel.StockItemDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-lg-6">
        <h4>Stock Item</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.StockItemName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemSize)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemSize)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemPrice)
            </dt>

            <dd>
                <ins>$</ins>
                @Html.DisplayFor(model => model.StockItemPrice)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemWeight)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemWeight)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemLeadTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemLeadTime)
                <ins> days</ins>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemOrigin)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemOrigin)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StockItemTags)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockItemTags)
            </dd>

        </dl>
    </div>
    <div class="col-lg-6">
        <dl class="dl-horizontal">
            <dd>
                @if(Model.StockItemPhoto == null)
                {
                <div class="color-box" style="background-color: dimgrey">
                    <p>No photo avaliable</p>
                </div>
                }
                @Html.DisplayFor(model => model.StockItemPhoto)
            </dd>
        </dl>

    </div>
</div>


